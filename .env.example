# Environment Configuration
NODE_ENV=development
USE_LOCAL_AWS=false

# AWS Configuration
AWS_REGION=us-east-1
# For local development, use AWS CLI configured credentials
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=BayonCoAgent-development

# S3 Configuration
S3_BUCKET_NAME=your-s3-bucket-name

# AWS Bedrock Configuration
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_REGION=us-east-1

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# Social Media OAuth Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# App URL for OAuth callbacks
NEXT_PUBLIC_APP_URL=http://localhost:3000

# MLS Provider Configuration
FLEXMLS_API_URL=https://api.flexmls.com/v1
FLEXMLS_CLIENT_ID=your-flexmls-client-id
FLEXMLS_CLIENT_SECRET=your-flexmls-client-secret

CRMLS_API_URL=https://api.crmls.org/RESO/OData
CRMLS_CLIENT_ID=your-crmls-client-id
CRMLS_CLIENT_SECRET=your-crmls-client-secret

BRIGHT_API_URL=https://api.brightmls.com/RESO/OData
BRIGHT_CLIENT_ID=your-bright-client-id
BRIGHT_CLIENT_SECRET=your-bright-client-secret

MLSGRID_API_URL=https://api.mlsgrid.com/v2
MLSGRID_ACCESS_TOKEN=your-mlsgrid-access-token

# External API Keys
BRIDGE_API_KEY=your-bridge-api-key
NEWS_API_KEY=your-news-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
TAVILY_API_KEY=your-tavily-api-key

# Optional: Serper (alternative to Tavily)
# SERPER_API_KEY=your-serper-api-key

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Stripe Price IDs (create these in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=price_starter_monthly
NEXT_PUBLIC_STRIPE_PROFESSIONAL_PRICE_ID=price_professional_monthly
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# Zapier Integration
ZAPIER_CLIENT_ID=your-zapier-client-id
ZAPIER_CLIENT_SECRET=your-zapier-client-secret
ZAPIER_WEBHOOK_SECRET=your-webhook-verification-secret

# Google Analytics 4
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your-ga4-api-secret
GA4_PROPERTY_ID=your-property-id
GA4_ACCESS_TOKEN=your-ga4-access-token

# Canva Integration (optional)
CANVA_CLIENT_ID=your-canva-client-id
CANVA_CLIENT_SECRET=your-canva-client-secret
CANVA_API_KEY=your-canva-api-key

# Zillow (optional - if API access secured)
ZILLOW_API_KEY=your-zillow-api-key
ZILLOW_PARTNER_ID=your-zillow-partner-id

# CRM Integrations
# Follow Up Boss
FOLLOWUPBOSS_API_KEY=your_follow_up_boss_api_key

# Facebook Lead Ads (uses existing Facebook OAuth above)
FACEBOOK_WEBHOOK_VERIFY_TOKEN=bayon_lead_ads_webhook

# Calendly
CALENDLY_CLIENT_ID=your_calendly_client_id
CALENDLY_CLIENT_SECRET=your_calendly_client_secret
CALENDLY_WEBHOOK_SIGNING_KEY=your_calendly_webhook_signing_key

# HubSpot
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret

# OAuth Tokens Table
OAUTH_TOKENS_TABLE=oauth-tokens
