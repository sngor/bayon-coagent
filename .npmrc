# Optimize for Amplify build environment
audit=false
fund=false
progress=false
loglevel=error
prefer-offline=true
cache-max=86400000
# Reduce memory usage during install
maxsockets=1
# Disable optional dependencies for faster installs
optional=false
# Skip scripts for security and speed
ignore-scripts=false
# Sharp optimization for AWS Lambda
sharp_binary_host=https://github.com/lovell/sharp-libvips/releases/download/
sharp_libvips_binary_host=https://github.com/lovell/sharp-libvips/releases/download/