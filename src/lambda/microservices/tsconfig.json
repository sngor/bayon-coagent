{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "**/*.ts",
        "**/__tests__/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}