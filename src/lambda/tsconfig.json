{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "..",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": false,
        "removeComments": true,
        "baseUrl": "..",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "*.ts"
    ],
    "files": [
        "life-event-processor.ts",
        "competitor-monitor-processor.ts",
        "trend-detector-processor.ts",
        "price-reduction-processor.ts",
        "publish-scheduled-content.ts",
        "sync-social-analytics.ts",
        "calculate-optimal-times.ts",
        "notification-processor.ts",
        "notification-digest-generator.ts",
        "notification-retry-processor.ts",
        "notification-cleanup-maintenance.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}